CC = gcc
SRC = main.c school.c
OBJ = ${SRC:.c=.o}
NAME = school
CFLAGS = -Wall -Werror -Wextra -pedantic
FGS := ${CFLAGS}
CL := ${CC}

all: ${NAME}

${NAME}: ${OBJ}
	${CC} ${OBJ} -o ${NAME}

%.o: %.c
	${CL} ${FGS} -c $< -o $@

clean: 
	${RM} *~ ${NAME}

oclean:
	${RM} ${OBJ}

fclean: clean oclean

re: oclean all
